		{
			"label": "PlatformIO: Build",
			"type": "shell",
			"command": "C:\\Users\\Admin\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"run"
			],
			"problemMatcher": [
				"$gcc"
			],
